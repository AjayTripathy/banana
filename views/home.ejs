		<script>
			var Bounty = Backbone.Model.extend({
				initialize: function () {
					console.log("Bounty created.");
				},
				defaults: {
					name: "John Q. Smith"
				}
			});

			var BountyCollection = Backbone.Collection.extend({
				model: Bounty
			});

			var BountyView = Backbone.View.extend({
				tagName: "div",
				className: "bounty",
				render: function () {
					$(this.el).html(this.template(this.model.toJSON()));
					return this;
				},
				initialize: function (args) {
					console.log("Initializing BountyView");
					this.model.bind("change:name", function () { console.log("CHANGE NAME WHAT")});
				}
			});

			var AppView = Backbone.View.extend({
				el: $("#content"),

				initialize: function () {
					console.log("Initializing AppView");
					Bounties.bind("add", this.addOne, this);
				},

				addOne: function (bounty) {
					var view = new BountyView({model: Bounty});
					$("#content").append(view.render().el);
				}
			});
		</script>

